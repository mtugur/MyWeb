{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MyWeb.Runtime": "Debug"
    }
  },

  "Bootstrap": {
    "AutoRun": true,
    "PackagePath": "C:\\Users\\User\\Desktop\\Proje\\MyWeb\\_packages\\demo.mywebpkg"
  },

  "History": {
    // Geliştirmede hızlı test için sadece burayı override ediyoruz
    "Enabled": true,
    "WriteIntervalSeconds": 1,
    "BatchSize": 100,
    "MaxQueue": 10000,
    "Retention": {
      "Enabled": true,
      "SweepMinutes": 1,
      "DeleteChunk": 5000,
      "DefaultRetentionDays": 30
    }
  }
}
